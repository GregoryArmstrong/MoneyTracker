<h1><%= @category.name %> Transactions</h1>

<%= link_to "Add Transaction", new_category_transaction_path %>
<ul>
<% @transactions.each do |transaction| %>
  <li><%= transaction.description %>
  $<%= transaction.amount %>
  <%= link_to "Edit Transaction", edit_category_transaction_path(transaction.category, transaction) %>
  <%= link_to "Delete Transaction", category_transaction_path(transaction.category, transaction), method: :delete %></li>
<% end %>
